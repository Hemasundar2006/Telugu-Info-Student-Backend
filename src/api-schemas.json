  "schemas": {
    "RegisterPayload": {
      "name": "string (required)",
      "email": "string (optional if phone)",
      "phone": "string (optional if email)",
      "password": "string (required, min 6)",
      "branch": "string (required)",
      "year": "number 1-4",
      "graduationYear": "number",
      "college": { "id": "ObjectId", "name": "string", "location": "string" }
    },
    "LoginPayload": { "email": "string", "phone": "string", "password": "string (required)" },
    "ForgotPasswordPayload": { "email": "string (required)" },
    "ResetPasswordPayload": { "password": "string (required, min 6)" },
    "UserProfilePayload": {
      "name": "string", "bio": "string", "college": "object", "branch": "string", "year": "number",
      "graduationYear": "number", "interests": "string[]", "skills": "string[]"
    },
    "NotificationPreferencesPayload": {
      "notificationPreferences": { "jobs": "boolean", "resources": "boolean", "community": "boolean", "email": "boolean" }
    },
    "LanguagePayload": { "language": "en | te" },
    "ThemePayload": { "theme": "light | dark | auto" },
    "ResourceMetaPayload": {
      "title": { "en": "string", "te": "string" }, "description": "string", "branch": "string", "subject": "string",
      "semester": "number 1-8", "category": "string", "fileType": "string", "tags": "string[]"
    },
    "ResourceUpdatePayload": { "title": "object", "description": "string", "branch": "string", "subject": "string", "semester": "number", "category": "string", "tags": "string[]" },
    "RatingPayload": { "rating": "number 1-5", "review": "string" },
    "CommentPayload": { "text": "string (required)" },
    "JobPayload": {
      "title": { "en": "string", "te": "string" }, "description": "string", "company": "object", "jobType": "string",
      "department": "string", "location": "object", "eligibility": "object", "salary": "object", "vacancies": "number",
      "applicationDeadline": "ISO date", "examDate": "ISO date", "importantDates": "array", "requiredDocuments": "string[]",
      "howToApply": "string", "registrationLink": "string (required)", "applicationProcess": "string", "tags": "string[]",
      "isFeatured": "boolean", "priority": "number"
    },
    "ApplicationUpdatePayload": { "status": "string", "notes": "string" },
    "ReminderPayload": { "reminderDate": "ISO date" },
    "ProgressPayload": { "progress": "number 0-100", "completed": "boolean" },
    "InterviewExperiencePayload": {
      "company": { "name": "string", "logo": "string" }, "role": "string", "interviewDate": "ISO date",
      "selectionStatus": "string", "rounds": "array", "overallExperience": "string", "preparationTips": "string",
      "salary": "object", "tags": "string[]"
    },
    "QuestionPayload": { "question": "string", "answer": "string", "category": "string", "topic": "string", "difficulty": "string", "company": "string", "askedBy": "string[]", "tags": "string[]" },
    "ImportantLinkPayload": { "title": { "en": "string", "te": "string" }, "description": "string", "url": "string", "category": "string", "icon": "string", "tags": "string[]", "state": "string" },
    "ForumPostPayload": { "title": "string", "content": "string", "category": "string", "tags": "string[]", "images": "string[]", "attachments": "string[]" },
    "ForumAnswerPayload": { "content": "string (required)", "images": "string[]" },
    "ReplyPayload": { "content": "string (required)" },
    "CollegePayload": { "name": "string", "shortName": "string", "location": "object", "university": "string", "website": "string", "branches": "string[]" },
    "RejectResourcePayload": { "reason": "string" },
    "HandleReportPayload": { "action": "dismiss | remove" }
  }
}
